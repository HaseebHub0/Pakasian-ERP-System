{
  "name": "erp-backend",
  "version": "1.0.0",
  "description": "ERP Backend API",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "migrate": "node src/migrations/migrate.js",
    "migrate:all": "node src/migrations/migrate-all.js",
    "migrate:knex": "knex migrate:latest",
    "migrate:knex:rollback": "knex migrate:rollback",
    "seed:knex": "knex seed:run",
    "migrate:sequelize": "sequelize-cli db:migrate",
    "migrate:sequelize:undo": "sequelize-cli db:migrate:undo",
    "seed:sequelize": "sequelize-cli db:seed:all",
    "test": "jest --testPathPattern=tests --verbose",
    "test:auth": "jest src/tests/auth.test.js --verbose",
    "test:protected": "jest src/tests/protected.test.js --verbose",
    "test:products": "jest src/tests/products.test.js --verbose",
    "test:watch": "jest --testPathPattern=tests --watch --verbose"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "knex": "^3.0.1",
    "sequelize": "^6.35.0",
    "sequelize-cli": "^6.6.2"
  },
  "keywords": ["erp", "api", "express", "postgresql"],
  "author": "ERP Team",
  "license": "MIT"
}
