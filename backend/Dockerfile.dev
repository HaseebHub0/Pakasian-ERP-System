# Development Dockerfile for backend
FROM node:18-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    sqlite

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Create data directory for SQLite
RUN mkdir -p data

# Expose port
EXPOSE 3001

# Start development server with nodemon
CMD ["npm", "run", "dev"]
